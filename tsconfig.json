{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "target": "es2019",
    "sourceMap": true,
    "lib": ["es2019"],
    "incremental": true,
    "resolveJsonModule": true,
    "outDir": "./dist"
  },
  "exclude": ["**/node_modules", "**/dist", "**/*.spec.ts"],
  "include": ["./src"]
}
